{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "rootDirs": ["/src", "/test", "/mock", "./typings"],
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["src/.umi/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
